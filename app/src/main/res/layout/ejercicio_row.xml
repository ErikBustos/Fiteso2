<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/ejercicio_row_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    android:orientation="vertical"

    android:paddingBottom="8dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="8dp"
    >

    <View
        android:id="@+id/ejercicio_row_circleView"
        android:layout_width="90px"
        android:layout_height="52px"
        android:background="@drawable/pesachiquitai"/>

    <TextView
        android:id="@+id/ejercicio_row_titleTextView"
        style="@style/RowTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/ejercicio_row_circleView"
        android:layout_toRightOf="@+id/ejercicio_row_circleView"
        android:paddingLeft="5dp" />

    <TextView
        android:id="@+id/ejercicio_row_categoria"
        style="@style/RowSubtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/ejercicio_row_titleTextView"
        android:layout_alignStart="@+id/ejercicio_row_titleTextView"
        android:layout_below="@+id/ejercicio_row_titleTextView"
        android:paddingLeft="8dp" />


</RelativeLayout>