<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"

    tools:context=".ActivityRegisterSeleccionDeporte">


    <TextView
        android:id="@+id/activity_register_seleccion_deporte_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="196dp"
        android:textColor="@color/colorWhite"
        android:text="¿Cuál deporte practicas?" />

    <Spinner
        android:id="@+id/activity_register_seleccion_deporte_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/activity_register_seleccion_deporte_textview"
        android:layout_marginTop="17dp"
        android:entries="@array/deportesenIteso"/>



    <Button
        android:id="@+id/activity_register_seleccion_deporte_buttonSiguente"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:background="@drawable/rounded_button_solid"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:layout_marginTop="125dp"

        android:text="@string/siguiente"
        android:textColor="@color/colorWhite"
        android:textAllCaps="false"
        android:layout_below="@+id/activity_register_seleccion_deporte_spinner"
        android:layout_centerHorizontal="true"
        />

</RelativeLayout>