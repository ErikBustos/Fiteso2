<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:id="@+id/activity_detalle_rutina_layout"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    >

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ActivityDetalleRutina"
   >

    <ImageView
        android:id="@+id/activity_detalle_rutina_imageview"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:src="@drawable/pesaxxxhdpi" />

    <TextView
        android:id="@+id/activity_detalle_rutina_title"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_below="@+id/activity_detalle_rutina_imageview"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:background="@color/colorGrayLight"
        android:text="TextView"
        android:textSize="25dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/activity_detalle_rutina_categoria"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/activity_detalle_rutina_title"
        android:text="Categoria"
        android:gravity="center"
        android:layout_centerHorizontal="true"/>


    <Button
        android:id="@+id/activity_detalle_rutina_bt"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="108dp"
        android:text="load" />

    <Button
        android:id="@+id/activity_detalle_rutina_bt2"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="106dp"
        android:text="Ejercicios"
        />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/activity_detalle_rutina_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="260dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/activity_detalle_rutina_categoria"></android.support.v7.widget.RecyclerView>

    <Button
        android:id="@+id/activity_detalle_rutina_show"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="-108dp"
        android:layout_toStartOf="@+id/activity_detalle_rutina_bt"
        android:text="cargar" />
</RelativeLayout>

</android.support.constraint.ConstraintLayout>