<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActivityExpEjercicio"
    android:paddingRight="20dp"
    android:paddingTop="30dp"
    android:paddingLeft="20dp"
    android:paddingBottom="30dp">

    <RelativeLayout
        android:id="@+id/ejercicio_detalle_relative"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorWhite"
        >

        <ImageView
            android:id="@+id/ejercicio_detalle_imageview"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:contentDescription="@string/app_name"
            android:scaleType="centerInside"
            android:src="@drawable/pesaxxxhdpi"
            android:background="@color/colorWhite"/>

        <TextView
            android:id="@+id/ejercicio_detalle_nombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/ejercicio_detalle_imageview"
            android:layout_gravity="bottom"
            android:background="@color/colorGrayLight"
            android:gravity="center"
            android:paddingBottom="3dp"
            android:paddingTop="3dp"
            android:textColor="@android:color/black"
            android:textSize="25sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/ejercicio_detalle_categoria"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ejercicio_detalle_nombre"
            android:gravity="center"
            android:text="categoria"
            android:textSize="20sp"/>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/ejercicio_detalle_categoria"
            android:scrollbarStyle="outsideOverlay"
            android:scrollbars="vertical"
            >
            <TextView
                android:id="@+id/ejercicio_detalle_descripcion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:textColor="@color/colorBlack"
                android:textSize="15sp"
                android:text="hola"/>
        </ScrollView>

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_gravity="bottom|end"
            android:src="@drawable/ic_back"
            />






    </RelativeLayout>

</android.support.constraint.ConstraintLayout>